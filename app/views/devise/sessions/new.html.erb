<%- title "Login" %>
<center><div class="container">
<div>
    <div class="welcome-form">
        <!-- <br><br><br>Welcome<br><br><br> -->
        <!-- <div class="welcomeText2">to Expert System</div> -->

        <%= image_tag("welcome.png", :class => "wel-img") %>
    </div>
    <div class="devise-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
        <%= f.label :email, class: "whiteLabel" %><br />
        <%= f.email_field :email, autofocus: true, class: "emailField" %>
    </div>

    <div>
        <%= f.label :password, class: "whiteLabel" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "passwordField" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div>
    	<%= f.check_box :remember_me %>
    	<%= f.label :remember_me, class: "whiteLabel" %>
	</div>
    <% end -%>
    <br>
    <div><%= f.submit "Sign in" %></div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
</div>
</div>
</center>

<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? content_for(:title) : "Expert System" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="header">
    <center><h1><%= content_for?(:title) ? content_for(:title) : "Expert System" %></h1></center>
</div>

<center>
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
</center>

<% if user_signed_in? %>
	<div class="userBar">
		<%= current_user.email %>
		<%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn-logout" %>
	</div>
<% end %>

<%= yield %>

</body>
</html>
